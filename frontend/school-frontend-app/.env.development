# Development environment configuration

# Skip preflight check to avoid dependency issues
SKIP_PREFLIGHT_CHECK=true

# Disable ESLint errors in development
ESLINT_NO_DEV_ERRORS=true
DISABLE_ESLINT_PLUGIN=true

# API URL - Use relative URL to leverage the proxy
REACT_APP_API_URL=/api

# Backend URL for direct connections
REACT_APP_BACKEND_URL=http://localhost:5000

# Disable mock data
REACT_APP_USE_MOCK_DATA=false

# Enable source maps for debugging
GENERATE_SOURCEMAP=true

# Set timeout for API requests
REACT_APP_TIMEOUT=60000

# Enable proxy for API requests
REACT_APP_USE_PROXY=true

# Disable API URL fixer in development
REACT_APP_DISABLE_API_URL_FIXER=true
